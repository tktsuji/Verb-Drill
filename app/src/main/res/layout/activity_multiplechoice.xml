<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBkgrndGray">

    <android.support.v7.widget.CardView
        android:id="@+id/multiplechoice_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="2dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardBackgroundColor="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtViewSpInfin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorRed1"
                android:text="Sp Infin"/>

            <TextView
                android:id="@+id/txtViewExtraContext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/darkGray"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtViewEngPhrase"
                android:id="@+id/txtViewEngPhrase"
                android:textSize="24sp"
                android:textColor="@color/darkGray"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/txtViewExtraContext2Bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"
                android:textColor="@color/darkGray"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/txtViewSpSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="subj"
                    android:textColor="@color/darkGray"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/txtViewEllipse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txtViewSpSubject"
                    android:layout_toEndOf="@id/txtViewSpSubject"
                    android:text="..."
                    android:textColor="@color/darkGray"
                    android:textSize="16sp"/>

            </RelativeLayout>
            <Button
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="button"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/mc_rectangle"
                android:onClick="onButtonClick"/>
            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="button"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/mc_rectangle"
                android:onClick="onButtonClick"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="button"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/mc_rectangle"
                android:onClick="onButtonClick"/>
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="button"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/mc_rectangle"
                android:onClick="onButtonClick"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txtViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/multiplechoice_cv"
        android:layout_alignLeft="@id/multiplechoice_cv"
        android:layout_alignStart="@id/multiplechoice_cv"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/txtViewTime"
        android:textSize="20sp"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"/>

    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/multiplechoice_cv"
        android:layout_toRightOf="@id/txtViewTime"
        android:layout_toEndOf="@id/txtViewTime"
        android:text="Chronometer"
        android:textColor="@color/darkGray"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtViewStreakNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/multiplechoice_cv"
        android:layout_alignRight="@id/multiplechoice_cv"
        android:layout_alignEnd="@id/multiplechoice_cv"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/txtViewStreakNum"
        android:textSize="20sp"
        android:textColor="@color/darkGray"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtViewStreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/multiplechoice_cv"
        android:text="@string/txtViewStreak"
        android:textSize="20sp"
        android:textColor="@color/darkGray"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/txtViewStreakNum"
        android:layout_toStartOf="@id/txtViewStreakNum"
        android:layout_marginRight="2dp"
        android:layout_marginEnd="2dp"/>

    <ExpandableListView
        android:id="@+id/lvExp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/txtViewStreak"
        android:layout_marginTop="8dp"/>

</RelativeLayout>