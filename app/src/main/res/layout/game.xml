<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/gamebkg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtViewPrompt"
        android:id="@+id/txtViewPrompt"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtViewEngPhrase"
        android:id="@+id/txtViewEngPhrase"
        android:layout_below="@+id/txtViewPrompt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="24sp"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/answerLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewEngPhrase"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:weightSum="11">

        <TextView
            android:id="@+id/txtViewSpSubject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="2dp"
            android:gravity="right"
            android:text="@string/txtViewSpSubj"
            android:textColor="#000000"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5">
            <EditText
                android:id="@+id/editTxtAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="20"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/txtViewFinalAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/editTxtAnswer"
                android:layout_alignRight="@id/editTxtAnswer"
                android:layout_alignBaseline="@id/editTxtAnswer"
                android:gravity="center"
                android:text=""
                android:textSize="20sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txtViewPeriod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="."
            android:textSize="25sp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonGo"
        android:id="@+id/buttonGo"
        android:onClick="onGo"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:background="@color/colorGreen1"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtViewStreak"
        android:id="@+id/txtViewStreak"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtViewStreakNum"
        android:id="@+id/txtViewStreakNum"
        android:layout_toRightOf="@+id/txtViewStreak"
        android:layout_alignBottom="@+id/txtViewStreak"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000" />

</RelativeLayout>