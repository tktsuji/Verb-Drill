<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Verb Settings">
        <PreferenceScreen
        android:key="select_verbs_key"
        android:title="@string/selectVerbs"
        android:summary="Turn verbs on/off.">
            <CheckBoxPreference
                android:title="Group 1"
                android:summary="ser, comer, escuchar, vivir hablar"
                android:key="group1_key"
                android:defaultValue="true" />
            <CheckBoxPreference
                android:title="Group 2"
                android:summary="ayudar, leer, correr, ver, pensar"
                android:key="group2_key"
                android:defaultValue="true" />
            <CheckBoxPreference
                android:title="Group 3"
                android:summary="llegar, creer, llamar, llevar, ir"
                android:key="group3_key"
                android:defaultValue="true" />
            <CheckBoxPreference
                android:title="Group 4"
                android:summary="tener, pagar, estudiar, querer, trabajar"
                android:key="group4_key"
                android:defaultValue="true" />
        </PreferenceScreen>
        <PreferenceScreen
            android:key="select_tenses_key"
            android:title="@string/selectTenses"
            android:summary="Turn tenses on/off. Remove/add verbs with irregular conjugations.">
            <CheckBoxPreference
                android:title="Regular Present Indicative"
                android:summary=""
                android:key="regular_present"
                android:defaultValue="true" />
            <CheckBoxPreference
                android:title="Irregular Present Indicative"
                android:summary="Includes any verb with at least one irregular form in this tense."
                android:key="irregular_present"
                android:defaultValue="true" />
            <CheckBoxPreference
                android:title="Regular Preterite Indicative"
                android:summary=""
                android:key="regular_preterite"
                android:defaultValue="true" />
            <CheckBoxPreference
                android:title="Irregular Preterite Indicative"
                android:summary="Includes any verb with at least one irregular form in this tense"
                android:key="irregular_preterite"
                android:defaultValue="true" />
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Sound Settings">
        <CheckBoxPreference
            android:title="Text-To-Speech"
            android:summary="Have each verb phrase read aloud."
            android:key="text_to_speech"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:title="Sound FX"
            android:summary="Play sound effects."
            android:key="sound_fx"
            android:defaultValue="true" />
    </PreferenceCategory>

</PreferenceScreen>